<Window x:Class="XMLEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLEditor"
        mc:Ignorable="d" Height="800" Width="1300" MinWidth="1300" MinHeight="800" 
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True" 
        Background="#121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#1F1b24" MouseDown="DraggableWindow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Label Content="ICON" HorizontalAlignment="Center" VerticalAlignment="Center" Background="AliceBlue"/>
            <DockPanel Grid.Column="1">
                <Image HorizontalAlignment="Right" 
                       Width="32" Height="32"
                       Cursor="Hand"
                       Margin="0 0 2 0">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding CloseAppCommand, Mode=OneTime}" />
                    </Image.InputBindings>
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="{StaticResource ResourceKey=btn_off}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="{StaticResource ResourceKey=btn_off_highlighted}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </DockPanel>
            <Border Grid.ColumnSpan="2" Grid.Row="0" BorderBrush="White" BorderThickness="0 0 0 1" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Background="#1F1b24" Orientation="Vertical">
                <Label Content="Settings" HorizontalAlignment="Center"
                       Style="{StaticResource ResourceKey=PrimaryLabelStyle}"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
